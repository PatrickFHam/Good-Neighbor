<div class="text-center col-md-3 movie-list bg-light card p-3 mt-5">
  <h2>{{movie_name}}</h2>
  <p>{{{get_emoji movie_genre}}}<br>Released: {{publish_year}}</p>
  <p>{{movie_description}}</p>
  <p id="test" class="hide">{{movie_id}}</p>

  {{#if logged_in}}
  <p>Lender:   {{user.name}}.</p>
  {{#unless is_available}}
  <p>Borrowed by:   {{current_holder}}</p>
  {{/unless}}
  {{#if logged_in}}
  {{#if is_available}}
  <p>Contact {{user.name}} at Unit #{{user.unit_number}} <br>Or call their mobile at {{{format_mobile_number user.mobile_number}}}</p>
  {{/if}}
  {{/if}}
  <p>
    {{#ifCondThree is_available current_holder username}}
    <button id="return-button" class="btn btn-primary return-movie" data-id="{{movie_id}}">Return Movie</button>
    {{/ifCondThree}}
    
    {{#ifCondTwo is_available user.name username}}
    <button id="borrow-button" class="btn btn-primary borrow-movie" data-id='{{movie_id}}'>Borrow Movie</button>
    {{/ifCondTwo}}
  
  </p>
  {{/if}}
    {{#unless logged_in}}
    <a href="/login" id="signup-login button" class="btn btn-primary signup-login button">Signup or Login to Borrow</a>
    {{/unless}}

</div>

<script src="/js/movie.js"></script>